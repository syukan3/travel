<div class="index_brochures">
  <h1>しおり一覧</h1>
  <%= link_to "新規作成", new_brochure_path %><br><br>
  <table>
    <thead>
      <tr>
        <th>Room</th>
        <th>Title</th>
        <th>Departure</th>
        <th>Arrival</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @brochures.each do |brochure| %>
        <tr>
          <td><%= brochure.room_id %></td>
          <td><%= brochure.title %></td>
          <td><%= brochure.departure %></td>
          <td><%= brochure.arrival %></td>
          <td><%= link_to 'Show', brochure %></td>
          <td><%= link_to 'Edit', edit_brochure_path(brochure) %></td>
          <td><%= link_to 'Destroy', brochure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<br><br>

<div class="index_member">
  <h1>メンバー一覧</h1>
  <%= "招待" %>&ensp;&ensp;&ensp;&ensp;<%= "編集" %><br><br>

</div>
