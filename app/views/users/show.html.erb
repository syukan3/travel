<div class="index_brochures">
  <section class="jumbotron text-center mypage-background">
    <div class="container top-text">
      <!-- <h1 class="jumbotron-heading">TravelMaker</h1>
      <p id="sub-explain" class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
      <p>
        <%= link_to 'New Travel', new_brochure_path, :class=>"btn btn-primary my-2" %>
      </p> -->
    </div>
  </section>

  <div class="container" style="margin-bottom: 40px;">
    <h1>マイページ</h1>
    <%= link_to "プロフィール変更", edit_user_registration_path, :class=>"btn btn-secondary my-2" %>

    <h3 style="margin-top: 60px">しおり一覧</h3>
    <p>
      <%= link_to 'New Travel', new_brochure_path, :class=>"btn btn-primary my-2" %>
    </p>

    <div class="row mb-2">
      <% @brochures.each do |brochure| %>
        <div class="col-md-6">
          <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
              <!-- <strong class="d-inline-block mb-2 text-primary">World</strong> -->
              <h3 class="mb-0"><%= brochure.title %></h3>
              <div class="mb-1 text-muted"><%= brochure.start_date.to_date %> ~ <%= (brochure.start_date + 60*60*24*(brochure.duration-1)).to_date %> (<%= brochure.duration %> days)</div>
              <p class="card-text mb-auto">Public : <%= brochure.public_flag %></p><br>
              <div class="btn-group">
                <%= link_to 'Show', brochure, :class=>"btn btn-sm btn-outline-secondary" %>
                <%= link_to 'Edit', edit_brochure_path(brochure), :class=>"btn btn-sm btn-outline-secondary" %>
                <%= link_to 'Destroy', brochure, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-sm btn-outline-secondary" %>
              </div>
            </div>
            <div class="col-auto d-none d-lg-block">
              <% if brochure.avatar.attached? %>
                <%= link_to image_tag(url_for(brochure.avatar), :class => "mypage_brochure_image"), brochure %>
              <% else %>
                <div class="mypage_brochure_no_image"></div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <br><br>

</div>
