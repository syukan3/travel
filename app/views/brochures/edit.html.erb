<h1>Editing Brochure</h1>

<%= form_with(model: @brochure, local: true) do |form| %>
  <% if @brochure.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@brochure.errors.count, "error") %> prohibited this brochure from being saved:</h2>

      <ul>
      <% brochure.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_field :start_date %>
  </div>

  <h1>スケジュール</h1>

  <div class="days">
    <%= link_to "１日追加", brochure_days_path(@brochure) , method: :post %><br><br>
    <% n = 1 %>
    <% @days.each do |day| %>
      <div class="day">
        <h3 style="display:inline;"><%= n %> 日目 （）</h3>
        <%= link_to 'Destroy', brochure_day_path(@brochure, day), method: :delete, data: { confirm: 'Are you sure?' } %>
        <p>開始時間 : <%= day.start_time %></p>

        <% m = 1 %>
        <% day.spots.each do |spot| %>
          <% if m != 1 %>
            <div class="time_required">
              ■ 移動時間 : googleMapで計算する。
            </div>
            <br>
          <% end %>
          <div class="spot">
            開始時間 : <%= day.start_time %><br>
            終了時間 : <%= day.start_time %><br>
            location : <%= spot.location_name %><br>
            所要時間 : <%= spot.time_required %><br>
            <%= link_to "行かない", brochure_day_spot_path(@brochure, day, spot) , method: :delete %><br><br>

          </div>
          <% m += 1 %>
        <% end %>
        <%= link_to "+ いきたい場所", brochure_day_spots_path(@brochure, day) , method: :post %><br><br>

      </div>
      <% n += 1 %>
    <% end %>

  </div>

  <div class="field">
    <%= form.label :sightseeing %>
    <%= form.text_field :sightseeing %>
  </div>


  <!-- <%= form.hidden_field :lat, id:"center_lat" %>
  <%= form.hidden_field :lng, id:"center_lng" %> -->

  <br>

  <div class="actions">
    <%= form.submit %>
  </div>



  <div id="map"></div>

  <script src="https://maps.googleapis.com/maps/api/js?key=<%= Rails.application.credentials.google_map_key %>&libraries=places&callback=initMap"
      async defer></script>

  <div id="infowindow-content">
    <img src="" width="16" height="16" id="place-icon">
    <span id="place-name"  class="title"></span><br>
    <span id="place-address"></span>
  </div>

<% end %>

<%= link_to 'Show', @brochure %> |


<br><br>




