          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title %>
      </div>

      <div class="field">
        <%= form.label :start_date %>
        <%= form.date_field :start_date %>
      </div>

      <div class="field">
        <%= form.label "Number of days" %>
        <%= form.number_field :duration %>
      </div>

      <div class="checkbox">
        <%= form.check_box 'public_flag', {:checked => true, :width	=> 40}, true, false %> Public
      </div>

      <br>

      <div class="actions">
        <%= form.submit %>
      </div>



